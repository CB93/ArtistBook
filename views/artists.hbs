<div id='artist-page'>
	<div id='artist-main'>
		<h1>{{heading}}</h1>
	</div>

	<div class="container" id="search">
		<div class="row">
			<div class="panel panel-default person-search">
				<div class="panel-body">
					<div class="row">
						<H3 id="searchText">Artist Directory</H3>
					</div>
					<form action='/search' method="post">
						<div class="input-group">
							<input class="form-control" type="text" name="search" id="search-input">
							<span class="input-group-btn">
								<button class="btn btn-light" type="button" data-toggle="collapse" href="#collapseExample" role="button"
									aria-expanded="false" aria-controls="collapseExample">Add
									Artist</button>
								<input class="btn btn-primary btn-md" role="button" type="submit" value="Search" />
							</span>
						</div>
					</form>
				</div>
			</div>
		</div>

		<div class="collapse" id="collapseExample">
			<form action="/add" method="post" class="artist-form" id="form" name="form_name" />
			<input class="form-control" id="name" type="text" name="name" maxlength="40" placeholder="Artist Name" />
			<input class="form-control" id="about" type="text" name="about" maxlength="40" placeholder="About Artist" />
			<input class="form-control" id="url" type="text" name="url" placeholder="Image URL" />
			<input class="add-button btn btn-light" type="submit" value="Add" role="button" />
			</form>
		</div>

		<div id='artist-area'>
			{{#each artist}}
			<div class="row row-margin">
				<div class="panel panel-default person-card">
					<div class="panel-body">
						<div class="row">
							<div class="col-xs-4">
								<img src={{pic}} />
							</div>
							<div class="col-xs-4">
								<div class="person-info">
									<h4>{{name}}</h4>
									<h6>{{about}}</h6>
								</div>
							</div>
							<div class="col-xs-4">
								<form action='/delete/:id' method="post">
									<button name="id" value={{idartist}} type="submit" class="btn btn-danger">Delete</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>